@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Forum</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Register</a>                        
            </li>
            <li class="nav-item active">
                <a class="nav-link" style="font-weight: bold;">Login</a>
            </li>
        </ul>
    </nav>
    @model Login
    <h3>Login</h3>
    <span style="color: red" asp-validation-for="UserName"></span>
    <form asp-action="Logging" asp-controller="LoginReg" method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Username:</span>
            </div>
            <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
        </div>
        <span style="color: red" asp-validation-for="Password"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Password:</span>
            </div>
            <input asp-for="Password" type="password" class="form-control" aria-label="password" placeholder="*********">
        </div>
        <button class="btn btn-outline-success" style="float: right;" type="submit">Log in</button>
    </form>
</div>