@{
    ViewData["Title"] = "Register";
}     
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Forum</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" style="font-weight: bold;">Register</a>                        
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/login">Login</a>
            </li>
        </ul>
    </nav>
    @model Register
    <h3>Register</h3>
    <form asp-action="Registering" asp-controller="LoginReg" method="post">
        <span asp-validation-for="UserName" style="color: red;"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Username:</span>
            </div>
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter your Username here">
        </div>
        <span asp-validation-for="Email" style="color: red;"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Email Address:</span>
            </div>
            <input asp-for="Email" type="text" class="form-control" placeholder="example@example.com">
        </div>
        <span asp-validation-for="FirstName" style="color: red"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">First Name:</span>
            </div>
        <input asp-for="FirstName" type="text" placeholder="At least 2 characters" class="form-control">
        </div>
        <span asp-validation-for="LastName" style="color: red"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Last Name:</span>
            </div>
            <input name="LastName" type="text" placeholder="At least 2 characters" class="form-control" id="basic-url">
        </div>   
        <span asp-validation-for="Password" style="color: red"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Password:</span>
            </div>
            <input name="Password" type="password" placeholder="At least 8 characters" class="form-control">
        </div>
        <span asp-validation-for="PassConf" style="color: red"></span>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Password Confirmation:</span>
            </div>
        <input name="PassConf" type="password" placeholder="Same as password" class="form-control">
        </div>
        <button class="btn btn-outline-success" style="float: right;">Register</button>
    </form>
</div>